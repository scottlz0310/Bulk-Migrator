{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:recommended"
    ],
    "dependencyDashboard": true,
    "timezone": "Asia/Tokyo",
    "labels": [
        "dependencies"
    ],
    "assignees": [
        "scottlz0310"
    ],
    "reviewers": [
        "scottlz0310"
    ],
    "prConcurrentLimit": 5,
    "prHourlyLimit": 2,
    "separateMajorMinor": true,
    "separateMinorPatch": false,
    "packageRules": [
        {
            "description": "Python サポートを有効化",
            "matchCategories": [
                "python"
            ],
            "enabled": true
        },
        {
            "description": "パッチバージョンは自動マージ",
            "matchUpdateTypes": [
                "patch"
            ],
            "automerge": true,
            "automergeType": "pr",
            "automergeStrategy": "squash"
        },
        {
            "description": "マイナーバージョンは自動マージ",
            "matchUpdateTypes": [
                "minor"
            ],
            "automerge": true,
            "automergeType": "pr",
            "automergeStrategy": "squash"
        },
        {
            "description": "メジャーバージョンは手動レビュー必須",
            "matchUpdateTypes": [
                "major"
            ],
            "automerge": false,
            "addLabels": [
                "major-update"
            ]
        },
        {
            "description": "セキュリティアップデートは優先度高",
            "matchDatasources": [
                "pypi"
            ],
            "matchUpdateTypes": [
                "patch",
                "pin"
            ],
            "matchCategories": [
                "security"
            ],
            "addLabels": [
                "security"
            ],
            "automerge": true,
            "prPriority": 10
        },
        {
            "description": "開発用パッケージのグループ化",
            "matchPackageNames": [
                "pytest",
                "pytest-cov",
                "pytest-mock",
                "pytest-xdist",
                "mypy",
                "ruff",
                "pre-commit",
                "bandit"
            ],
            "groupName": "development dependencies",
            "automerge": true
        },
        {
            "description": "型定義パッケージのグループ化",
            "matchPackageNames": [
                "/^types-/"
            ],
            "groupName": "type definitions",
            "automerge": true
        },
        {
            "description": "セキュリティツールのグループ化",
            "matchPackageNames": [
                "bandit",
                "pip-audit",
                "cyclonedx-bom",
                "cryptography"
            ],
            "groupName": "security tools",
            "automerge": false,
            "addLabels": [
                "security-tools"
            ]
        },
        {
            "description": "Microsoft関連パッケージのグループ化",
            "matchPackageNames": [
                "msal"
            ],
            "groupName": "microsoft dependencies",
            "automerge": false
        }
    ],
    "vulnerabilityAlerts": {
        "labels": [
            "security",
            "vulnerability"
        ],
        "assignees": [
            "scottlz0310"
        ],
        "automerge": true
    },
    "lockFileMaintenance": {
        "enabled": true,
        "schedule": [
            "before 5am on monday"
        ]
    },
    "prCreation": "immediate",
    "commitMessagePrefix": "chore(deps):",
    "commitMessageAction": "update",
    "commitMessageTopic": "{{depName}}",
    "commitMessageExtra": "to {{newVersion}}",
    "semanticCommits": "enabled",
    "platformAutomerge": false,
    "rebaseWhen": "behind-base-branch"
}
